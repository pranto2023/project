
@{
    ViewBag.Title = "MscBscDegree";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body data-sidebar="dark">

    <div id="layout-wrapper">
        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title text-center">Degree Entry</h4>
                                    <br />
                                    <br />
                                    <div class="mb-3 row">
                                        <label for="example-text-input" class="col-md-2 col-form-label">Bechelor Degree</label>
                                        <div class="col-md-6">
                                            <input class="text-center form-control" placeholder="" type="text" id="bn">

                                        </div>
                                        <div class="col-md-3">
                                            <button type="button" onclick="BechelorDegree()" class="btn btn-success waves-effect btn-label waves-light">
                                                <i class="bx bx-smile label-icon"></i> Save Degree
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">                                    
                                    <div class="mb-3 row">
                                        <label for="example-text-input" class="col-md-2 col-form-label">Mastars Degree</label>
                                        <div class="col-md-6">
                                            <input class="text-center form-control" placeholder="" type="text" id="mn">

                                        </div>
                                        <div class="col-md-3">
                                            <button type="button" onclick="MastarsDegree()" class="btn btn-success waves-effect btn-label waves-light">
                                                <i class="bx bx-smile label-icon"></i> Save Degree
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>

            </div>
        </div>

    </div>


</body>

@section Scripts{

    <script src="~/assets/libs/jquery/jquery.min.js"></script>
    <input id="hfEditbtn" value="@ViewBag.Editbtn" style="display:none" />
    <input id="masterId" value="@ViewBag.Id" style="display:none" />
    <script src="https://cdn.ckeditor.com/4.16.1/standard/ckeditor.js"></script>

    <script>

        $(document).ready(function () {

        });



        function BechelorDegree()
        {
            var jsonData = {};

            jsonData["DegreeName"] = $('#bn').val();

                var urlpath = '@Url.Action("Save_BscDegree", "AdminCareer")';

                $.ajax({

                    data: jsonData,
                    url: urlpath,
                    type: "POST",
                    beforeSend: function () {
                        //SingleImage();
                    },
                    success: function () {
                        location.href =  '@Url.Action("MscBscDegree", "AdminCareer")';
                    },
                });
        }
        function MastarsDegree()
        {
            var jsonData = {};

            jsonData["MscDegree"] = $('#mn').val();

                var urlpath = '@Url.Action("Save_Msc_Degree", "AdminCareer")';

                $.ajax({

                    data: jsonData,
                    url: urlpath,
                    type: "POST",
                    beforeSend: function () {
                        //SingleImage();
                    },
                    success: function () {
                        location.href =  '@Url.Action("MscBscDegree", "AdminCareer")';
                    },
                });
        }

    </script>
}

